<core:FragmentDefinition
xmlns="sap.m"
xmlns:core="sap.ui.core"
>
<TableSelectDialog
multiSelect="false"
  contentHeight="50%"
  contentWidth="30%"
  title="{i18n>selezionaCodiceMatnr}"
  search=".handleSearchMatnr"
  confirm="onConfirmFilter"
  cancel=".handleClose"
  items="{CommonMcModel>/filterbar/Materiale/items}"
>
  <columns>
    <Column>
      <header>
        <Text text="{i18n>CodiceMatnr}" />
      </header>
    </Column>
    <Column>
      <header>
        <Text text="{i18n>Descrizione}" />
      </header>
    </Column>
  </columns>
  <ColumnListItem>
    <cells>
      <Text text="{CommonMcModel>MATNR}" />
    </cells>
    <cells>
      <Text text="{CommonMcModel>MAKTX}" />
    </cells>
  </ColumnListItem>
</TableSelectDialog>
</core:FragmentDefinition>