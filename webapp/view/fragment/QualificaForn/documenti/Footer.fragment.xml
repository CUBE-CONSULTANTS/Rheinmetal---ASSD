<c:FragmentDefinition
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
>
<OverflowToolbar class="footer"  
            visible="{= ${user>/tipoUtente} === 'Interno' ? true : false }"         
            >
            <Button                    
            icon="sap-icon://nav-back"                    
            text="{i18n>Indietro}"                  
            type="Emphasized"
            press="navToRicercaDoc" 
        />                   
                <ToolbarSpacer
                   />
                   <Button       
                   enabled="{docuModel>/enabled}"            
                   icon="sap-icon://save"                    
                   text="{i18n>Conferma}"                  
                   type="Emphasized"
                   press="confirmValidation" 
               />          
            </OverflowToolbar>
</c:FragmentDefinition>