<c:FragmentDefinition
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
>

<Table
      sticky="HeaderToolbar,ColumnHeaders"
      growing="true"
      autoPopinMode="true"
      backgroundDesign="Solid"
      items="{RicercaFornModel>/fornitori}"
      visible="{Main>/visibility}"
      > 

      <columns>
        <Column width="90px"  hAlign="Left">
          <Text text="{i18n>CodiceFornitore}" />
        </Column>
        <Column width="250px"  hAlign="Center">
          <Text text="{i18n>Descrizione}" />
        </Column>
        <Column width="90px"  hAlign="Center">
          <Text text="{i18n>Paese}" />
        </Column>
        <Column width="90px"  hAlign="Center">
          <Text text="{i18n>PIVA}" />
        </Column>
        <Column width="90px"  hAlign="Center">
          <Text text="{i18n>Stato}" />
        </Column>  
            
      </columns>
      <items>
        <ColumnListItem     
          type="Navigation"
         press="navToDocumenti" 
        >
        <cells>
          <Text text="{RicercaFornModel>LIFNR}" />
        </cells>
        <cells>
          <Text text="{RicercaFornModel>NAME1}" />
        </cells>
        <cells>
          <Text text="{RicercaFornModel>COUNTRY}" />
        </cells>
        <cells>
          <Text text="{RicercaFornModel>STCEG}" />
        </cells>
        <cells>
          <c:Icon
              color="{RicercaFornModel>colore}"
              size="1.3rem"
              src="{RicercaFornModel>STATO}"
          />
        </cells>     
        </ColumnListItem>
      </items>
      </Table>

</c:FragmentDefinition>