<core:FragmentDefinition
xmlns="sap.m"
xmlns:core="sap.ui.core"
>
<TableSelectDialog
multiSelect="false"
  contentHeight="50%"
  contentWidth="30%"
  title="{i18n>selezionaCodiceFornitore}"
  search=".handleSearchForn"
  confirm="onConfirmFilter"
  cancel=".handleClose"
  items="{RicercaFornModel>/filterbar/Fornitore}"
>
  <columns>
    <Column>
      <header>
        <Text text="{i18n>CodiceFornitore}" />
      </header>
    </Column>
  </columns>
  <ColumnListItem>
    <cells>
      <Text text="{RicercaFornModel>LIFNR}" />
    </cells>
  </ColumnListItem>
</TableSelectDialog>
</core:FragmentDefinition>