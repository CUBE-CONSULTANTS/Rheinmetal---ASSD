<c:FragmentDefinition
xmlns="sap.m"
xmlns:c="sap.ui.core"
xmlns:fb="sap.ui.comp.filterbar"
>
<fb:FilterBar
  id="filterbarQual"
  search="onSearchData"
  filterContainerWidth="120px"
  showClearOnFB="true"
  clear="onResetFilterBar"
  useToolbar="false"
  showFilterConfiguration="false"
  class="sapUiSmallMarginBottom"
>
  <fb:filterGroupItems>
    <fb:FilterGroupItem
      name="CodForn"
      label="{i18n>CodiceFornitore}"
      groupName="Filtri"
      groupTitle="Filtri"
      visibleInFilterBar="true"
    >
      <fb:control>
        <Input
          value="{Filtro>/LIFNR}"
          showValueHelp="true"   
          valueHelpOnly="true"   
          valueHelpRequest=".handleValueHelp"    
          type="Number"
        />
      </fb:control>
    </fb:FilterGroupItem>
    <fb:FilterGroupItem
      name="descr"
      label="{i18n>Descrizione}"
      groupName="Filtri"
      groupTitle="Filtri"
      visibleInFilterBar="true"
    >
    <fb:control>
      <Input
        value="{Filtro>/NAME1}"
        showValueHelp="true"
        valueHelpOnly="true"
        valueHelpRequest=".handleValueHelp"
        type="Text"
      />
    </fb:control>
    </fb:FilterGroupItem>
    <fb:FilterGroupItem
    name="Paese"
    label="{i18n>Paese}"
    groupName="Filtri"
    groupTitle="Filtri"
    visibleInFilterBar="true"
  >
    <fb:control>
      <Input
      value="{Filtro>/COUNTRY}"
        showValueHelp="true"
        valueHelpOnly="true"
        valueHelpRequest=".handleValueHelp"
        type="Text"
      />
    </fb:control>
  </fb:FilterGroupItem>
  <fb:FilterGroupItem
  name="P.IVA"
  label="{i18n>PIVA}"
  groupName="Filtri"
  groupTitle="Filtri"
  visibleInFilterBar="true"
>
  <fb:control>
    <Input
    value="{Filtro>/STCEG}"
      showValueHelp="true"  
      valueHelpOnly="true"  
      valueHelpRequest=".handleValueHelp"  
      
    />
  </fb:control>
</fb:FilterGroupItem>

  </fb:filterGroupItems>
</fb:FilterBar>

</c:FragmentDefinition>